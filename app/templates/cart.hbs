<main class='container mt-5'>
  <h1>Shopping Cart</h1>
  <ol class='breadcrumb'>
    <li class='breadcrumb-item'>
      <LinkTo @route='index'>
        Home
      </LinkTo>
    </li>
    <li class='breadcrumb-item'>Shopping Cart</li>
  </ol>
  {{#each this.cart.itemList as |item|}}

    <div class='cart-item d-flex alaign-items-center'>
      <div class='cart-item-thumbnail'>
        {{! template-lint-disable require-valid-alt-text }}
        <img src={{item.image}} alt='' />
      </div>
      <div class='ml-3'>
        <h4>{{item.name}}</h4>
        {{! template-lint-disable no-inline-styles }}
        <i style='font-weight:bold'>{{currency item.price}}</i>
      </div>
      {{! template-lint-disable require-input-label }}
      <input
        type='number'
        class='ml-auto my-auto'
        value={{item.count}}
        {{on 'input' (fn this.updateItemCount item)}}
      />
    </div>
  {{/each}}

  <section class='w-50 ml-auto text-left mb-5'>
    <div class='row'>
      <span class='col'>Subtotal</span>
      <span class='col'>{{currency this.subtotal}}</span>
    </div>
    <div class='row'>
      <span class='col'>Tax</span>
      <span class='col'>{{currency this.tax sign='$'}}</span>
    </div>
    <div class='row'>
      <span class='col'>Total</span>
      <span class='col'>{{currency this.total}}</span>
    </div>
  </section>

  <button class='btn btn-success float-rigth' type='button'>Check out</button>

  <h1>{{this.fullName}}</h1>

</main>